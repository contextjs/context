{
  "scopeName": "source.contextjs",
  "name": "contextjs",
  "fileTypes": ["tshtml"],
  "injections": {
    "string.quoted.double.html": {
      "patterns": [
        { "include": "#escaped" },
        { "include": "#inline" }
      ]
    },
    "string.quoted.single.html": {
      "patterns": [
        { "include": "#escaped" },
        { "include": "#inline" }
      ]
    }
  },
  "patterns": [
    { "include": "#escaped" },
    { "include": "#inline" },
    { "include": "#comment" },
    { "include": "#block-comment" },
    { "include": "text.html.basic" }
  ],
  "repository": {
    "inline": {
      "name": "variable.other.tshtml",
      "match": "@[a-zA-Z_][a-zA-Z0-9_]*(?:\\.[a-zA-Z_][a-zA-Z0-9_]*)*"
    },
    "escaped": {
      "name": "constant.character.escape.tshtml",
      "match": "@@"
    },
    "comment": {
      "name": "comment.line.double-slash.tshtml",
      "match": "//.*$"
    },
    "block-comment": {
      "name": "comment.block.tshtml",
      "begin": "/\\*",
      "end": "\\*/"
    }
  }
}