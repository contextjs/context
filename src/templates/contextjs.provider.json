{
    "$schema": "https://contextjs.dev/schemas/contextjs.provider.schema.json",
    "name": "@contextjs/templates",
    "commands": {
        "new": {
            "path": "./services/new.command.js",
            "description": "Creates a new ContextJS project.",
            "help": "Creates a new ContextJS project with the specified template."
        }
    },
    "templates": {
        "webapi": {
            "title": "WebAPI",
            "path": "./templates/webapi",
            "description": "A Web API Template for ContextJS."
        },
        "mvc": {
            "title": "MVC",
            "path": "./templates/mvc",
            "description": "An MVC Template for ContextJS."
        }
    }
}